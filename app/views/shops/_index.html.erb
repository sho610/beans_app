<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% shops.each do |shop| %>
      <tr>
        <td><%= link_to user_path(shop.user) do %>
          <%= attachment_image_tag(shop.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to shop.name, shop_path(shop), class: "shop_#{shop.id}" %></td>
        <td><%= shop.overview %></td>
        <td><%= prefecture.name %></td>
    <% end %>
  </tbody>
</table>