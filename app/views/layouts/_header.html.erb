<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
    <div class="container">
      <a class="navbar-brand text-dark" href="/"><span>Beans</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= link_to ' Home',user_path(current_user),class: 'fas fa-home nav-link text-dark' %></li>
          <li><%= link_to ' Users',users_path,class: 'fas fa-users nav-link text-dark' %></li>
          <li><%= link_to ' Shops',shops_path ,class: 'fas fa-book-open nav-link text-dark'%></li>
          <li><%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-dark' %></li>
        <% else %>
          <li><%= link_to ' Home',root_path,class: 'fas fa-home nav-link text-dark' %></li>
          <li><%= link_to ' About',home_about_path,class: 'fas fa-link nav-link text-dark' %></li>
          <li><%= link_to ' sign up', new_user_registration_path,class: 'fas fa-user-plus nav-link text-dark' %></li>
          <li><%= link_to ' login', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-dark'%></li>
        <% end %>
        </ul>
      </div>
      <!--検索窓-->
      <div class="search-form">
        <%#= search_form_for @search, search_path do |f| %>
          <%#= f.text_field :name_cont, placeholder: 'ショップ名を入力...' %>
          <%#= f.submit ("検索する") %>
        <%# end %>
        <% if user_signed_in? %>
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'content' %>
            <%= select_tag 'model', options_for_select({ "User" => "user", "Shop" => "shop", "Prefecture" => "prefecture", "Genre" => "genre" }) %>
            <%#= select_tag 'method', options_for_select({ "完全一致" => "perfect",  "前方一致" => "forward_match" ,"後方一致" => "backward_match", "部分一致" => "partial" }) %>
            <%= submit_tag '検索' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</header>